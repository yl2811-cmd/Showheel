@section Scripts {
    <script>
        (() => {
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
            if (prefersReducedMotion) return;

            const targets = Array.from(document.querySelectorAll('.background-image'));
            if (!targets.length) return;

            const moveStrength = 50;
            const signedSquare = (value) => value * Math.abs(value);
            const randomVector = () => {
                const angle = Math.random() * Math.PI * 2;
                return { x: Math.cos(angle), y: Math.sin(angle) };
            };

            const targetConfigs = targets.map((bg) => {
                const depth = parseFloat(bg.dataset.motionDepth || '1');
                const scale = parseFloat(bg.dataset.motionScale || '1.08');
                const preserveTransform = bg.dataset.preserveTransform === 'true';
                const baseTransform = preserveTransform ? window.getComputedStyle(bg).transform : '';
                const { x: dirX, y: dirY } = randomVector();

                return {
                    bg,
                    depth,
                    scale,
                    dirX,
                    dirY,
                    baseTransform: baseTransform === 'none' ? '' : baseTransform,
                };
            });

            document.addEventListener('mousemove', (e) => {
                const width = window.innerWidth;
                const height = window.innerHeight;

                const normX = (e.clientX - width / 2) / (width / 2);
                const normY = (e.clientY - height / 2) / (height / 2);

                const moveX = signedSquare(normX) * moveStrength;
                const moveY = signedSquare(normY) * moveStrength;

                targetConfigs.forEach((config) => {
                    const offsetX = moveX * config.dirX;
                    const offsetY = moveY * config.dirY;
                    const transformValue = `translate3d(${-offsetX * config.depth}px, ${-offsetY * config.depth}px, 0) scale(${config.scale})`;
                    config.bg.style.transform = `${config.baseTransform ? `${config.baseTransform} ` : ''}${transformValue}`;
                });
            });
        })();

        (() => {
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
            if (prefersReducedMotion) return;

            const wheelImage = document.querySelector('.wheel-image');
            if (!wheelImage) return;

            const renderFrames = [
                '/images/render1.png',
                '/images/render2.png',
                '/images/render3.png',
                '/images/render4.jpg',
                '/images/render5.jpg',
                '/images/render6.jpg',
                '/images/rendeer7.jpg',
            ];

            let currentIndex = 0;

            const rotateFrame = () => {
                currentIndex = (currentIndex + 1) % renderFrames.length;
                wheelImage.src = renderFrames[currentIndex];
            };

            setInterval(rotateFrame, 4000);
        })();
    </script>
}

